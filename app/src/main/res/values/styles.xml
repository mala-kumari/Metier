<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionMenuTextColor">#000</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="btndesign">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_margin">3sp</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="style1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/blue3</item>
        <item name="android:actionMenuTextColor">#000</item>
    </style>

    <style name="style2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10sp</item>
        <item name="android:layout_margin">20sp</item>
        <!-- <item name="android:textColor">@color/stroke</item> -->
        <item name="android:orientation">vertical</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="style3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10sp</item>
        <item name="android:layout_marginBottom">5sp</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="style4">
        <item name="android:layout_width">150sp</item>
        <item name="android:layout_height">70sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">20sp</item>
        <item name="android:layout_marginBottom">10sp</item>
        <item name="android:layout_marginRight">5sp</item>
        <item name="android:layout_marginLeft">5sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:typeface">serif</item>
    </style>

</resources>
